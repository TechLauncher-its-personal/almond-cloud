ul.nav.navbar-nav
  li.hidden-md.hidden-lg.hidden-sm
    a(href="/")= _("Home")
  for page in Config.EXTRA_NAVBAR
    li
      a(href=page.url)= _(page.title)
  li
    a(href=Config.THINGPEDIA_URL)= _("Thingpedia")
  li
    a(href='https://wiki.almond.stanford.edu')= _("Docs")

ul.nav.navbar-nav.navbar-right
  if authenticated
    li
      a(href="/me")= _("My Genie")
  if authenticated
    li
      a(href=Config.THINGPEDIA_URL + '/cheatsheet')= _("Cheatsheet")
  if authenticated && user.developer_org
    li
      a(href='/developers')= _("Console")
  if authenticated && (user.roles & Constants.Role.ALL_ADMIN) !== 0
    li
      a(href="/admin")= _("Admin")
  if authenticated
    li
      a(href="/user/profile")= _("Settings")
  li
    if authenticated
      a.navbar-login#navbar-login-button(href='/user/logout')= _("Log Out")
    else
      a.navbar-login#navbar-login-button(href='/user/login')= _("Log In")
